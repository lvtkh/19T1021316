@model _19T1021316.DomainModels.Employee
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Save" method="post">

            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.EmployeeID)
            <div class="form-group">
                <label class="control-label col-sm-2">Họ đệm:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.LastName, new
             {
                 @class = "form-control",
                 @autofocus = "autofocus"
             })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Chọn ảnh:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Photo, new { @class = "form-control", @type = "file" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" value="@Model.BirthDate.Date.ToString("yyyy-MM-dd")" name="BirthDate">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Notes, new { @class = "form-control", })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", })
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    @Html.ValidationSummary("", new { style = "color:#f00" })
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Thêm dữ liệu
                    </button>
                    <a href="~/Employee/" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>

