@model _19T1021316.DomainModels.Employee
@{
    ViewBag.Title = "";
}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Save" method="post">

            <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Họ đệm:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" autofocus value="@Model.LastName" name="LastName">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.FirstName" name="FirstName">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Chọn ảnh:</label>
                <div class="col-sm-10">
                    <input type="file" value="@Model.Photo" name="Photo">

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.BirthDate" name="BirthDate">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="@Model.Notes" name="Notes">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" value="@Model.Email" name="Email">
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mật khẩu:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" value="@Model.Password" name="Password">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Thêm dữ liệu
                    </button>
                    <a href="~/Employee/" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>