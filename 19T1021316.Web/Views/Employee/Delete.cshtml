@model _19T1021316.DomainModels.Employee

@{ ViewBag.Title = "Xoá nhân viên"; }

<div class="box box-danger">
    <div class="box-body">
        <form class="form-horizontal" action="~/Employee/Delete/@Model.EmployeeID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2"></label>

                <div class="col-sm-10">
                    <div class="preview-avatar" style="width:200px; height:200px;">
                        <img src="@Model.Photo" style="width:100%; height:100%; object-fit:cover;border-radius:6px;" />
                    </div>
                </div>

            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Họ đệm:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.LastName/p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Tên:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.FirstName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.BirthDate.Date.ToString("yyyy/MM/dd")</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ghi chú:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Notes</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Email</p>
                </div>
            </div>




            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-danger">
                        <i class="glyphicon glyphicon-floppy-disk"></i>
                        Xóa dữ liệu
                    </button>
                    <a href="~/Employee/" class="btn btn-warning">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>




