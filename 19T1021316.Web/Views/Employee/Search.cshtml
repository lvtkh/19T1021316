@model _19T1021316.Web.Models.EmployeeSearchOutput

@{
    Layout = null;
}

<p>
    Có <strong>@Model.RowCount</strong> Nhân viên trong tổng số <strong>@Model.PageCount</strong> trang
</p>

<div class="table-responsive">
    <table style="margin-bottom:0;" class="table table-bordered table-striped table-hover">
        <thead>
            <tr class="bg-primary">
                <th>Ảnh</th>
                <th>Họ đệm</th>
                <th>Tên</th>
                <th>Ngày sinh</th>
                <th>Ghi chú</th>
                <th>Email</th>
                <th>Mật khẩu</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td> <img src="@item.Photo" class="media-object" style="width:60px"> </td>
                    <td>@item.LastName</td>
                    <td>@item.FirstName</td>
                    <td>@item.BirthDate</td>
                    <td>@item.Notes</td>
                    <td>@item.Email</td>
                    <td>@item.Password</td>
                    <td class="text-right">
                        <a href="~/Employee/Edit/@item.EmployeeID" class="btn btn-sm btn-primary" title="Sửa">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Employee/Delete/@item.EmployeeID" class="btn btn-sm btn-danger" title="Xoá">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>



@* Phân trang *@
<div class="text-center">
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.PageCount; i++)
        {
            if (i == ViewBag.Page)
            {

                <li class="active"><a href="#">i</a></li>
            }
            else
            {
                <li> <a href="javascript:;" onclick="doSearch(@i)">@i</a></li>
            }

        }
    </ul>
</div>

    </div>
</div>



