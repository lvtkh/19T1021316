
@{
    ViewBag.Title = "Quản lý mặt hàng";
}

<div class="box box-primary">
    <div class="box-body">
        @* Form tìm kiếm *@
        <form>
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" name="searchValue" autofocus>
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i> Tìm kiếm
                    </button>

                    <a href="~/Category/Create" class="btn btn-primary" style="margin-left:5px;">
                        <i class="fa fa-plus"></i> Bổ sung mặt hàng
                    </a>
                </div>
            </div>
        </form>


        @* Kết quả tìm kiếm *@
        <p style="margin-top: 10px;">
            Có <strong>1,567</strong> mặt hàng trong tổng số <strong>100</strong> trang
        </p>

        <div class="table-responsive">
            <table style="margin-bottom:0;" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="bg-primary">
                        <th>Tên mặt hàng</th>
                        <th>Danh mục</th>
                        <th>Thứ tự đặt hàng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <tr>
                            <td>Áo len Cổ Bẻ Sơ Mi</td>
                            <td>Dài tay</td>
                            <td>1233</td>
                            <td class="text-right">
                                <a href="~/Category/Edit" class="btn btn-xs btn-primary">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Category/Delete" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


        @* Phân trang *@
        <div class="text-center">
            <ul class="pagination">
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>

    </div>
</div>